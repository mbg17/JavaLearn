<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.curd.dao.AccountDao">
    <!-- 配置一堆一对应关系
    association 一对一配置 ：javaType 一对一映射实体类
    -->
    <resultMap id="accountUser" type="account">
        <id property="id" column="aid"></id>
        <result property="uid" column="uid"></result>
        <result property="money" column="money"></result>
        <!-- 立即加载模式 -->
        <!--<association property="user" javaType="user">
            <id property="id" column="id1"></id>
            <result property="username" column="username"></result>
            <result property="address" column="address"></result>
        </association>-->
        <!-- 延迟加载模式 -->
        <association property="user" column="uid" select="com.curd.dao.UserDao.findById"></association>
    </resultMap>

    <select id="findAll" resultType="account">
        select * from account
    </select>

    <select id="findAllByUser" resultMap="accountUser">
        select * from account
    </select>

    <select id="findAllByUserId" resultType="account">
        select * from account where uid = #{uid}
    </select>
</mapper>